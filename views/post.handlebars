<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

{{#if Comments.length}}
  <div class="col-md-12 project-list">
      <h4>Comments:</h4>
    {{#each Comments as |comment|}}
      <div class="alert alert-dark" role="alert">
  <h4 class="alert-heading">{{user.name}}</h4>
  <p>{{comment.content}}</p>
  <hr>
  <p class="mb-0">{{format_date comment.date_created}}</p>
</div>
    {{/each}}
  </div>
  {{/if}}
  <p>
    <form id= 'comment-form' style= "display:block">
    <div class="form-group">
      <label for="comment-content">New Comment</label>
      <textarea class="form-control" id="commentBody" rows="2"></textarea>
    </div>
    <button type="submit" id="comment-submit" class="btn btn-primary" data-id="{{{id}}}">Submit</button>
    </form>
    <button id="comment" class="btn btn-primary" style= "display:none">Add a Comment</button>
  </p>
    <script src="/js/comments.js"></script>
</div>