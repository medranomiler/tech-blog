<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="mb-4 border border-5 border-white">
<div class="row project text-white bg-dark m-1">
  <div class="col-md-8">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{post.id}}" class="text-white">{{post.name}}</a>
    </h2>
    </div>
  <div class="col-md-4">
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
  <div class="col-md-8 p-3">
    <p>
      {{post.description}}
    </p>
  </div>
  </div>
{{/each}}


