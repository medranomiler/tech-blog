<div class="row justify-content-center">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>


<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post! </h3>
  <form class="form new-project-form">
  <div class="mb-3">
  <label for="newBlogPost" class="form-label">Title</label>
  <input type="text" class="form-control" id="project-name" placeholder="Why JavaScript Just Works">
</div>
<div class="mb-3">
  <label for="BlogContent" class="form-label">Content</label>
  <textarea class="form-control" id="project-desc" rows="3" style="height: 100px;"></textarea>
</div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    </div>
  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Blog Posts: </h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}" class="text-white">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
